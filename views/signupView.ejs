<!-- Sign Up Form Container -->
<div class="w-50 mx-auto mt-5 border border-dark" style="padding: 20px; background-color: #f2f2f2; border-radius: 10px;">

  <!-- Sign Up Heading -->
  <div class="mx-auto mb-4" style="width: 200px; text-align: center;">
    <h4 style="color: #333;">Sign Up</h4>
  </div>

  <!-- Sign Up Form -->
  <form action="/employee/create" method="post">

    <!-- Name Input -->
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        placeholder="Divyanshu"
        required
      />
    </div>

    <!-- Email Input -->
    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input
        type="email"
        class="form-control"
        id="email"
        placeholder="divyanshu@email.com"
        name="email"
        required
      />
    </div>

    <!-- Password Input -->
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        required
      />
    </div>

    <!-- Confirm Password Input -->
    <div class="mb-3">
      <label for="confirmPassword" class="form-label">Confirm Password</label>
      <input
        type="password"
        class="form-control"
        id="confirmPassword"
        name="confirmPassword"
        required
      />
    </div>

    <!-- Submit Button -->
    <div class="mb-4 mt-3" style="display: flex; justify-content: center">
      <button type="submit" class="btn btn-primary" style="width: 150px;">Sign Up</button>
    </div>
  </form>

  <!-- Log In Link -->
  <div class="mx-auto mt-3" style="width: 300px; text-align: center;">
    <span style="color: #666;">Already have an account? </span>
    <a href="/employee/signin" style="color: #007bff; text-decoration: none;">Log in Instead</a>
  </div>
</div>
