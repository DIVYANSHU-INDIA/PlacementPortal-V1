<!-- Schedule Interview Form -->
<form
  class="w-60 mx-auto mt-4 bg-light p-4 rounded"
  action="/company/schedule-interview"
  method="post"
  style="height: 70vh; display: flex; flex-direction: column; justify-content: space-between; align-items: center;"
>
  <!-- Form Heading -->
  <h3 class="text-primary mb-4">Schedule Interview</h3>

  <!-- Dropdown to Select Student -->
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <select
      class="form-select"
      aria-label="Default select example"
      name="id"
      id="name"
    >
      <option selected disabled>Select Student</option>
      <!-- Iterate through Students to Populate Dropdown -->
      <% for(let student of students){ %>
        <option value="<%= student._id %>"><%= student.name %></option>
      <% } %>
    </select>
  </div>  

  <!-- Input for Company Name -->
  <div class="mb-3">
    <label for="company" class="form-label">Company</label>
    <input
      type="text"
      class="form-control"
      id="company"
      name="company"
    />
  </div>

  <!-- Input for Interview Date -->
  <div class="mb-3">
    <label for="date" class="form-label">Date</label>
    <input
      type="date"
      class="form-control"
      id="date"
      name="date"
    />
  </div>

  <!-- Submit Button -->
  <button type="submit" class="btn btn-primary align-self-center">
    Schedule Interview
  </button>
</form>
